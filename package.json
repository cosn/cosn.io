{
  "name": "blog",
  "version": "0.0.1",
  "description": "Cosmin's personal blog, Pragmatic Optimism",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:11ty": "pnpx @11ty/eleventy",
    "build:css": "pnpx tailwindcss -i src/css/tailwind.css -o _site/css/styles.css --postcss",
    "dev": "npm-run-all -p dev:*",
    "dev:11ty": "pnpx @11ty/eleventy --serve --quiet",
    "dev:css": "pnpx tailwindcss -i src/css/tailwind.css -o _site/css/styles.css --watch --postcss",
    "debug": "DEBUG=Eleventy* pnpx @11ty/eleventy",
    "debugstart": "DEBUG=Eleventy* pnpx @11ty/eleventy --serve --quiet",
    "benchmark": "DEBUG=Eleventy:Benchmark* pnpx @11ty/eleventy"
  },
  "keywords": [
    "cos",
    "blog",
    "impatient optimism"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cosn/cosn.github.io.git"
  },
  "author": {
    "name": "Cosmin Nicolaescu",
    "email": "cos@cosn.io",
    "url": "https://cosn.io"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.19",
    "eleventy-postcss-extension": "^1.0.0",
    "globals": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  }
}
