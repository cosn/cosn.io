{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "globalEnv": ["RAINDROP_TOKEN", "UPSTASH_REDIS_REST_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "format": {},
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "test": {},
    "test:unit": {
      "cache": false,
      "interactive": true
    },
    "test:e2e": {
      "outputs": ["test-results/**"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
